<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_talent_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天赋名称"
                android:textColor="@color/colorPrimaryWhite"
                android:textSize="@dimen/hero_info_primary_text" />

            <TextView
                android:id="@+id/tv_lv_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="LV"
                android:textColor="@color/colorPrimaryWhite"
                android:textSize="@dimen/hero_info_primary_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/li_talent_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_border"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/iv_talent_0"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/li_talent_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_border"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/iv_talent_1"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/li_talent_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_border"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/iv_talent_2"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/li_talent_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_border"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/iv_talent_3"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/li_talent_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_border"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/iv_talent_4"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="类型："
                        android:textColor="@color/lightPrimaryColor"
                        android:textSize="@dimen/hero_info_secondary_text" />

                    <TextView
                        android:id="@+id/tv_talent_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="被动"
                        android:textColor="@color/lightPrimaryColor"
                        android:textSize="@dimen/hero_info_secondary_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CD："
                        android:textColor="@color/lightPrimaryColor"
                        android:textSize="@dimen/hero_info_secondary_text" />

                    <TextView
                        android:id="@+id/tv_talent_cd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="0"
                        android:textColor="@color/lightPrimaryColor"
                        android:textSize="@dimen/hero_info_secondary_text" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_talent_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="天赋描述"
                android:textColor="@color/lightPrimaryColor"
                android:textSize="@dimen/hero_info_secondary_text" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView><!--
</LinearLayout>-->
