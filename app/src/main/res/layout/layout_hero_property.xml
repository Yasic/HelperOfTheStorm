<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="属性"
            android:textColor="@color/colorAccentWhite"
            android:textSize="@dimen/hero_info_subtitle_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_hero_info_lv"
            android:text="LV1"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:textSize="@dimen/hero_info_subtitle_text"
            android:textColor="@color/colorAccentWhite"
            android:textDirection="rtl"/>
        <ImageButton
            android:id="@+id/ib_hero_info_lv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="#00000000"
            android:layout_gravity="bottom"
            android:src="@drawable/rotate_3d"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_hp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生命值："
                android:textColor="@color/colorAccentWhite"
                android:textSize="@dimen/hero_info_primary_text" />

            <TextView
                android:id="@+id/tv_hp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="0"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/hero_info_primary_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_hp_recovery_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生命回复："
                android:textColor="@color/colorAccentWhite"
                android:textSize="@dimen/hero_info_primary_text" />

            <TextView
                android:id="@+id/tv_hp_recovery_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="0"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/hero_info_primary_text"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_mp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="魔法值："
                android:textColor="@color/colorAccentWhite"
                android:textSize="@dimen/hero_info_primary_text" />

            <TextView
                android:id="@+id/tv_mp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="0"
                android:textColor="@color/colorPrimaryBlue"
                android:textSize="@dimen/hero_info_primary_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_mp_recovery_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="魔法回复："
                android:textColor="@color/colorAccentWhite"
                android:textSize="@dimen/hero_info_primary_text"/>

            <TextView
                android:id="@+id/tv_mp_recovery_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="0"
                android:textColor="@color/colorPrimaryBlue"
                android:textSize="@dimen/hero_info_primary_text"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="攻击伤害："
                android:textColor="@color/colorAccentWhite"
                android:textSize="@dimen/hero_info_primary_text"/>

            <TextView
                android:id="@+id/tv_attack_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="0"
                android:textColor="@color/colorAccentWhite"
                android:textSize="@dimen/hero_info_primary_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="攻城伤害："
                android:textColor="@color/colorAccentWhite"
                android:textSize="@dimen/hero_info_primary_text"/>

            <TextView
                android:id="@+id/tv_siege_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="0"
                android:textColor="@color/colorAccentWhite"
                android:textSize="@dimen/hero_info_primary_text"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="攻击间隔："
                android:textColor="@color/colorAccentWhite"
                android:textSize="@dimen/hero_info_primary_text"/>

            <TextView
                android:id="@+id/tv_attack_per_second_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="0"
                android:textColor="@color/colorAccentWhite"
                android:textSize="@dimen/hero_info_primary_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="攻击范围："
                android:textColor="@color/colorAccentWhite"
                android:textSize="@dimen/hero_info_primary_text"/>

            <TextView
                android:id="@+id/tv_attack_range_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="0"
                android:textColor="@color/colorAccentWhite"
                android:textSize="@dimen/hero_info_primary_text"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="行走速度："
                android:textColor="@color/colorAccentWhite"
                android:textSize="@dimen/hero_info_primary_text"/>

            <TextView
                android:id="@+id/tv_walk_speed_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="0%"
                android:textColor="@color/colorAccentWhite"
                android:textSize="@dimen/hero_info_primary_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="坐骑速度："
                android:textColor="@color/colorAccentWhite"
                android:textSize="@dimen/hero_info_primary_text"/>

            <TextView
                android:id="@+id/tv_ride_speed_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="0%"
                android:textColor="@color/colorAccentWhite"
                android:textSize="@dimen/hero_info_primary_text"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>