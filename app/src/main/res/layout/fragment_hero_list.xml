<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_hero_list_filter_bar_height"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/ib_warrior"
                android:layout_width="@dimen/fragment_hero_list_filter_bar_icon_height"
                android:layout_height="@dimen/fragment_hero_list_filter_bar_icon_height"
                android:layout_marginLeft="7dp"
                android:background="@drawable/main_view_btn_warrior_off" />

            <ImageButton
                android:id="@+id/ib_assassin"
                android:layout_width="@dimen/fragment_hero_list_filter_bar_icon_height"
                android:layout_height="@dimen/fragment_hero_list_filter_bar_icon_height"
                android:layout_marginLeft="7dp"
                android:background="@drawable/main_view_btn_assassin_off" />

            <ImageButton
                android:id="@+id/ib_specialist"
                android:layout_width="@dimen/fragment_hero_list_filter_bar_icon_height"
                android:layout_height="@dimen/fragment_hero_list_filter_bar_icon_height"
                android:layout_marginLeft="7dp"
                android:background="@drawable/main_view_btn_specialist_off" />

            <ImageButton
                android:id="@+id/ib_support"
                android:layout_width="@dimen/fragment_hero_list_filter_bar_icon_height"
                android:layout_height="@dimen/fragment_hero_list_filter_bar_icon_height"
                android:layout_marginLeft="7dp"
                android:background="@drawable/main_view_btn_support_off" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right">

            <ImageButton
                android:id="@+id/ib_warcraft"
                android:layout_width="@dimen/fragment_hero_list_filter_bar_icon_height"
                android:layout_height="@dimen/fragment_hero_list_filter_bar_icon_height"
                android:layout_marginLeft="7dp"
                android:background="@drawable/main_view_btn_warcraft_off" />

            <ImageButton
                android:id="@+id/ib_diablo"
                android:layout_width="@dimen/fragment_hero_list_filter_bar_icon_height"
                android:layout_height="@dimen/fragment_hero_list_filter_bar_icon_height"
                android:layout_marginLeft="7dp"
                android:background="@drawable/main_view_btn_diablo_off" />

            <ImageButton
                android:id="@+id/ib_overwatch"
                android:layout_width="@dimen/fragment_hero_list_filter_bar_icon_height"
                android:layout_height="@dimen/fragment_hero_list_filter_bar_icon_height"
                android:layout_marginLeft="7dp"
                android:background="@drawable/main_view_btn_overwatch_off" />

            <ImageButton
                android:id="@+id/ib_starcraft"
                android:layout_width="@dimen/fragment_hero_list_filter_bar_icon_height"
                android:layout_height="@dimen/fragment_hero_list_filter_bar_icon_height"
                android:layout_marginLeft="7dp"
                android:background="@drawable/main_view_btn_starcraft_off" />

            <ImageButton
                android:id="@+id/ib_retro"
                android:layout_width="@dimen/fragment_hero_list_filter_bar_icon_height"
                android:layout_height="@dimen/fragment_hero_list_filter_bar_icon_height"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/main_view_btn_retro_off" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/hero_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
