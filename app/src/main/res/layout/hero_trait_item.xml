<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hero_trait_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp"
    android:layout_marginTop="7dp"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_hero_trait"
                android:background="@color/colorPrimary"
                android:layout_width="32dp"
                android:layout_height="32dp" />

        <TextView
            android:id="@+id/tv_hero_trait_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:text="英雄特质"
            android:textColor="@color/colorPrimaryBlue"
            android:textSize="@dimen/hero_info_primary_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_shortcut"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/blue_border"
                android:text="D"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryBlue"
                android:textSize="@dimen/hero_info_secondary_text" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="耗蓝："
                android:textColor="@color/lightPrimaryColor"
                android:textSize="@dimen/hero_info_secondary_text" />

            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:text="0"
                android:textColor="@color/lightPrimaryColor"
                android:textSize="@dimen/hero_info_secondary_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CD："
                android:textColor="@color/lightPrimaryColor"
                android:textSize="@dimen/hero_info_secondary_text" />

            <TextView
                android:id="@+id/tv_cd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:text="0"
                android:textColor="@color/lightPrimaryColor"
                android:textSize="@dimen/hero_info_secondary_text" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="特质介绍"
        android:textColor="@color/lightPrimaryColor"
        android:textSize="@dimen/hero_info_secondary_text" />
</LinearLayout>